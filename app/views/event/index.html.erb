<div class="container-index-event">
    <%= form_tag(event_index_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], id: 'search-bar', placeholder: "Search Catégorie" %>
        <button type="submit" class="submit-form"><i class="fas fa-search"></i></button>
    <% end %>
    <div class="wrapper-index-event">
        <% @events.each_with_index do |event, k| %>
            <div class="div-event">
                <h3 class="text-center w1" data-toggle="modal" data-target="#eventModal<%=k%>"><%= event.title %></h3>
                <div class="w2" data-toggle="modal" data-target="#eventModal<%=k%>">
                    <h4 class="text-center pt-2">Description</h4>
                    <p class="text-center pl-5 pr-5"><%= event.description %></p>
                </div>
                <div class="wrapper-index-event-3" data-toggle="modal" data-target="#eventModal<%=k%>">
                    <h4 class="text-center pt-2">Informations</h4>
                    <p class=""> Date: 26 janvier 2020</p>
                    <p> Créer par: <%= User.find_by(id: event.user_id).firstname %></p>
                    <p> Invités: 1/8 </p>
                </div>
                <% if User.find_by(id: event.user_id).id == current_user.id %>
                    <%= form_tag event_path(event.id), method: "delete", class: 'w5' do %>
                        <%= submit_tag "Supprimer", class: 'btn-delete-guest'%>
                    <% end %>
                    <div class= "w6">
                        <button data-toggle="modal" data-target="#myModal<%=k%>" data-remote="<%= edit_event_path(event.id) %> #modal-edit-fields" class="btn-edit-guest">Edit</a>
                    </div>
                <% elsif isAlreadyGuest(current_user, event) %>
                    <%= form_tag event_guest_path(event.id, Guest.find_by(event_id: event.id, name: current_user.firstname).id), method: "delete", class: 'w4' do %>
                        <%= submit_tag "Se désinscrire", class: 'btn-unsubscribed-guest'%>
                    <% end %>
                <% else %>
                    <%= form_tag event_guest_index_path(event.id), method: "post", class: 'w4' do %>
                        <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
                        <%= submit_tag "S'inscrire", class: 'btn-add-guest'%>
                    <% end %>
                <% end %>

                <div class="modal fade" id="eventModal<%=k%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="eventModalLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p><%= event.title %></p>
                                <p><%= event.catégorie %></p>
                                <p><%= event.description %></p>
                            <% if User.find_by(id: event.user_id).id == current_user.id %>
                                <%= form_tag event_path(event.id), method: "delete", class: 'w4' do %>
                                    <%= submit_tag "Supprimer", class: 'btn-delete-guest'%>
                                <% end %>
                            <% elsif isAlreadyGuest(current_user, event) %>
                                <%= form_tag event_guest_path(event.id, Guest.find_by(event_id: event.id, name: current_user.firstname).id), method: "delete", class: 'w4' do %>
                                    <%= submit_tag "Se désinscrire", class: 'btn-unsubscribed-guest'%>
                                <% end %>
                            <% else %>
                                <%= form_tag event_guest_index_path(event.id), method: "post", class: 'w4' do %>
                                    <input type="hidden" name="authenticity_token" value= <%= form_authenticity_token %> >
                                    <%= submit_tag "S'inscrire", class: 'btn-add-guest'%>
                                <% end %>
                            <% end %>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="modal fade" id="myModal<%=k%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <%= form_tag event_path(event.id), method: "patch", class: '' do %>
                                    <div class="form-group">
                                        <%= label_tag(:q, "Title:") %>
                                        <%= text_field_tag :title, event.title,placeholder: 'Ajouter un titre', class: 'form-control', id: 'new-event-title'%>
                                    </div>
                                    <div class="form-group">
                                        <%= label_tag(:q, "Catégorie:") %>
                                        <%= text_field_tag :catégorie, event.catégorie, placeholder: 'Ajouter une catégorie', class: 'form-control', id: 'new-event-categorie'%>
                                    </div>

                                    <div class="form-group">
                                        <%= label_tag(:q, "Description:") %>
                                        <%= text_field_tag :description, event.description ,placeholder: 'Ajouter une description', class: 'form-control', id: 'new-event-description'%>
                                    </div>
                                    
                                    <div class="form-group d-flex justify-content-between">
                                    <div>
                                        <label for="start">Date:</label>
                                        <%= date_field_tag :date %>

                                    </div>
                                    <div>
                                        <%= check_box_tag(:public) %>
                                        <%= label_tag(:public, "public") %>
                                    </div>
                                    </div>

                                    <%= submit_tag("Edit", class: "btn btn-primary btn-block", id: "submit-event") %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        <% end %>
    </div>
</div>