<div id="container-new-event">
      <%= form_tag url_for(action:'create'), method: "post", class: 'event-new-form' do %>
        <div class="form-group">
          <%= label_tag(:q, "Title:") %>
          <%= text_field_tag :title, "",placeholder: 'Ajouter un titre', class: 'form-control', id: 'new-event-title'%>
        </div>
        <div class="form-group">
          <%= label_tag(:q, "Catégorie:") %>
          <%= text_field_tag :catégorie, "",placeholder: 'Ajouter une catégorie', class: 'form-control', id: 'new-event-categorie'%>
        </div>

        <div class="form-group">
          <%= label_tag(:q, "Description:") %>
          <%= text_field_tag :description, "",placeholder: 'Ajouter une description', class: 'form-control', id: 'new-event-description'%>
        </div>
        
        <div class="form-group d-flex justify-content-between">
          <div>
            <label for="start">Date:</label>
            <%= date_field_tag :date %>

          </div>
          <div>
            <label for="start">Horaire:</label>
            <%= time_field_tag :time %>

          </div>
          <div>
            <%= check_box_tag(:public) %>
            <%= label_tag(:public, "public") %>
          </div>
        </div>

        <%= submit_tag("Créer", class: "btn btn-primary btn-block", id: "submit-event") %>
      <% end %>
</div>