<div class="container-my_events">
    <div class="container-fluid">
        <div class="row d-flex justify-content-around">
            <% @events.each_with_index do |event, k| %>
                <div class="col-3 event_card">
                    <h2 class="text-center"><%= event.title %></h2>
                    <div class="container-fluid d-flex">
                        <div class="col-6 my_event_description">
                            <h4>Description</h4>
                            <p><%= event.description %></p>
                        </div>
                        <div class="col-6 my_event_informations">
                            <h4>Informations</h4>
                            <ul class="d-flex flex-column">
                                <li>Date: 26 janvier 2010</li>
                                <li>Créer par: <%= User.find_by(id: event.user_id).firstname %></li>
                                <li>Guests: <%= k %></li>
                            </ul>
                        </div>
                    </div>
                    <%= form_tag event_path(event.id), method: "delete", class: 'w5' do %>
                        <%= submit_tag "Supprimer", class: 'btn-delete-guest'%>
                    <% end %>
                    <button data-toggle="modal" data-target="#myModal<%=k%>" data-remote="<%= edit_event_path(event.id) %> #modal-edit-fields" class="my_event_edit_button">Edit</a>
                </div>

                <div class="modal fade" id="myModal<%=k%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <%= form_tag event_path(event.id), method: "patch", class: '' do %>
                                <div class="form-group">
                                    <%= label_tag(:q, "Title:") %>
                                    <%= text_field_tag :title, event.title,placeholder: 'Ajouter un titre', class: 'form-control', id: 'new-event-title'%>
                                </div>
                                <div class="form-group">
                                    <%= label_tag(:q, "Catégorie:") %>
                                    <%= text_field_tag :catégorie, event.catégorie, placeholder: 'Ajouter une catégorie', class: 'form-control', id: 'new-event-categorie'%>
                                </div>

                                <div class="form-group">
                                    <%= label_tag(:q, "Description:") %>
                                    <%= text_field_tag :description, event.description ,placeholder: 'Ajouter une description', class: 'form-control', id: 'new-event-description'%>
                                </div>
                                
                                <div class="form-group d-flex justify-content-between">
                                <div>
                                    <label for="start">Date:</label>
                                    <%= date_field_tag :date %>

                                </div>
                                <div>
                                    <%= check_box_tag(:public) %>
                                    <%= label_tag(:public, "public") %>
                                </div>
                                </div>

                                <%= submit_tag("Edit", class: "btn btn-primary btn-block", id: "submit-event") %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
                
            <% end %>
            <% if @events_length%3 == 1 %>
                <div class="col-3 event_card-invisible"></div>
                <div class="col-3 event_card-invisible"></div>
            <% end %>
            <% if @events_length%3 == 2 %>
                <div class="col-3 event_card-invisible"></div>
            <% end %>               
        </div>



        <div class="row d-flex justify-content-around">
            <% @guest_events.each_with_index do |guest_event, k| %>
                <div class="col-3 event_card">
                    <h2 class="text-center"><%= guest_event.title %></h2>
                    <div class="container-fluid d-flex">
                        <div class="col-6 2">
                            <h4>Description</h4>
                            <p><%= guest_event.description %></p>
                        </div>
                        <div class="col-6 3">
                            <h4>Informations</h4>
                            <ul class="d-flex flex-column">
                                <li>Date: 26 janvier 2010</li>
                                <li>Créer par: <%= User.find_by(id: guest_event.user_id).firstname %></li>
                                <li>Guests: <%= k %></li>
                            </ul>
                        </div>
                    </div>                   
                </div>
            <% end %>
            <% if @guest_events_length%3 == 1 %>
                <div class="col-3 event_card-invisible"></div>
                <div class="col-3 event_card-invisible"></div>
            <% end %>
            <% if @guest_events_length%3 == 2 %>
                <div class="col-3 event_card-invisible"></div>
            <% end %>               
        </div>
    </div>
</div>